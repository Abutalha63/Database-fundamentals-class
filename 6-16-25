SELECT SUM(PRICE), CATEGORY FROM ITEM GROUP BY CATEGORY ORDER BY SUM(PRICE) DESC;

SELECT * FROM ITEM;

---- SHOW ME THE CATEGORY GME AND TOY AND THE TOTAL PRICE FOR THESE CATEGORIES

SELECT SUM(PRICE), CATEGORY
FROM ITEM
WHERE (CATEGORY = 'GME' OR CATEGORY = 'TOY')---() ONLY IF W/O HAVING
HAVING SUM(PRICE)<500.00
GROUP BY CATEGORY
ORDER BY CATEGORY DESC;


SELECT * FROM CUSTOMER;

SELECT COUNT(CUSTOMER_NUM), REP_NUM
FROM CUSTOMER
WHERE REP_NUM = '45' OR REP_NUM = '30'
GROUP BY REP_NUM
ORDER BY REP_NUM DESC;

SELECT CREDIT_LIMIT AS CREDIT_TEST, COUNT(*) AS TEST
FROM CUSTOMER
WHERE REP_NUM IN('15', '45')
HAVING COUNT(*) <2
GROUP BY CREDIT_LIMIT;
--ORDER BY REP_NUM DESC, CREDIT_LIMIT DESC;

SELECT * FROM CUSTOMER;

--List as part of your output the sum of balance of all customers for reps 30 & 45 but only for sum balances of more than 5000. List also the rep number in your output and order by rep number in larger to smaller order.
SELECT SUM(BALANCE), REP_NUM
FROM CUSTOMER
WHERE REP_NUM IN(30, 45)
HAVING SUM(BALANCE) > 5000
GROUP BY REP_NUM
ORDER BY REP_NUM;

SELECT SUM(BALANCE), REP_NUM
FROM CUSTOMER
WHERE REP_NUM IN('30', '45')
HAVING SUM(BALANCE) > 5000
GROUP BY REP_NUM
ORDER BY REP_NUM;
